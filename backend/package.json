{
  "name": "reeder-fleet-backend",
  "version": "1.0.0",
  "description": "Reeder Fleet Management System - Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
